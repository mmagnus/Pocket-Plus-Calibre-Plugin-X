            response = json.load(response)
        except HTTPError as e:
            if e.code == 401:
                # Calibre access has been removed
                self.reauthorize()
                raise e
        if not response['list']:
            self.abort_recipe_processing('No unread articles in the Pocket account "{}"'.format(self.config.user))
        return response

